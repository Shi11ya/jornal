<Page x:Class="prilpract.JoAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prilpract"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JoAdd">

    <Grid  Background="CadetBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="340" Width="184">
            <TextBlock Text="Код" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding idlog}" Margin="5"/>
            <TextBlock Text="Логин" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding login}" Margin="5"/>
            <TextBlock Text="Операция" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding operation}" Margin="5"/>
            <TextBlock Text="Дата операции" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding dateop}" Margin="5"/>
            <TextBlock Text="Код пользователя" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding userid}" Margin="5"/>

            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="27" Background="Lime" FontFamily="Georgia" Click="SaveBtn_Click" />
            <Button x:Name="BackBtn" Content="Назад" Margin="5" Width="150" Height="27" Background="PaleVioletRed" FontFamily="Georgia" Click="BackBtn_Click"  />
        </StackPanel>

    </Grid>
</Page>
