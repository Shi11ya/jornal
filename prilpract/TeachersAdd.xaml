<Page x:Class="prilpract.TeachersAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prilpract"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeachersAdd">

    <Grid Background="CadetBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="393" Width="184">
            <TextBlock Text="Код учителя" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding teacherid}" Margin="5"/>
            <TextBlock Text="ФИО" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding teacherFIO}" Margin="5"/>
            <TextBlock Text="Дата рождения" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding birthdate}" Margin="5"/>
            <TextBlock Text="Пол" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding gender}" Margin="5"/>
            <TextBlock Text="Телефон" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding phone}" Margin="5"/>
            <TextBlock Text="Предмет" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding subjectspecialization}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="27" Background="Lime" FontFamily="Georgia" Click="SaveBtn_Click" />
            <Button x:Name="BackBtn" Content="Назад" Margin="5" Width="150" Height="27" Background="Violet" FontFamily="Georgia" Click="BackBtn_Click"  />
        </StackPanel>
        
    </Grid>
</Page>
