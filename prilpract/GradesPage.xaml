<Page x:Class="prilpract.GradesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prilpract"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GradesPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="GradeDG" HorizontalAlignment="Stretch" AutoGenerateColumns="False" IsReadOnly="True" Background="CadetBlue" FontFamily="Georgia">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код оценки" Binding="{Binding gradeid}" Width="*"/>
                <DataGridTextColumn Header="ФИО ученика" Binding="{Binding studentid}" Width="*"/>
                <DataGridTextColumn Header="Наименование предмета " Binding="{Binding subjectid}" Width="*"/>
                <DataGridTextColumn Header="Оценка" Binding="{Binding grade}" Width="*"/>
                <DataGridTextColumn Header="Когда выставлена" Binding="{Binding gradedate}" Width="*"/>
                <DataGridTextColumn Header="Кем выставлена" Binding="{Binding teacherid}" Width="*"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="Change" Content="Изменить" Margin="5" Height="30" Width="70"  FontFamily="Georgia" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Margin="0,350,0,0" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Background="CadetBlue">
            <Button x:Name="AddBtn" Content="Добавить" Margin="10" Height="30" Width="106"  FontFamily="Georgia" Click="AddBtn_Click" BorderBrush="White" Background="Lime" />
            <Button x:Name="Delete" Content="Удалить" Margin="10" Height="30" Width="106"  FontFamily="Georgia" Click="Delete_Click" BorderBrush="White" Background="PaleVioletRed" />
            <Button x:Name ="UpdBtn"  Content="Обновить" Margin="10" Height="30" Width="106"  FontFamily="Georgia" Click="UpdBtn_Click" BorderBrush="White" Background="White" />
            <Button x:Name="Back" Content="Назад"  Margin="10" Height="30" Width="106"  FontFamily="Georgia" Click="Back_Click" BorderBrush="White" Background="Violet" />
            <ComboBox Name="FiltrCmd" DisplayMemberPath="Birthday" Margin="5" Height="30" Width="272" Background="#FFF7CD99" SelectionChanged="FiltrCmd_SelectionChanged" />

        </StackPanel>
    </Grid>
</Page>
