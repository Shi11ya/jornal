<Page x:Class="prilpract.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prilpract"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="CadetBlue"/>
                <GradientStop Color="CadetBlue" Offset="1"/>
                <GradientStop Color="CadetBlue" Offset="0.382"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="12,0,0,0" Grid.Column="1" Height="412" Width="429">
            <TextBlock Text="МБОУ БГО СОШ №13" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center" FontFamily="Georgia" Height="59" FontSize="36" Width="419"/>

            <TextBlock Text="Электронная система управления"  FontSize="16"  Margin="0,0,0,40" HorizontalAlignment="Center" FontFamily="Georgia"/>

            <Button x:Name="StudentsButton"   Content="Учащиеся" Width="200" Height="40"  Margin="5" FontSize="18"  Background="DimGray" Foreground="White" FontFamily="Georgia" Click="StudentsButton_Click"/>
            <Button x:Name="TeachersButton"  Content="Преподаватели"  Width="200"  Height="40"   Margin="5" FontSize="18" Background="DimGray" Foreground="White" FontFamily="Georgia" Click="TeachersButton_Click"/>
            <Button x:Name="SubjectsButton"  Content="Предметы"   Width="200" Height="40"  Margin="5" FontSize="18" Background="DimGray" Foreground="White" FontFamily="Georgia" Click="SubjectsButton_Click"/>
            <Button x:Name="GradesButton"  Content="Оценки" Width="200" Height="40" Margin="5" FontSize="18" Background="DimGray" Foreground="White" FontFamily="Georgia" Click="GradesButton_Click"/>
            <Button x:Name="OtchetButton"  Content="Отчеты" Width="200" Height="40" Margin="5" FontSize="18" Background="DimGray" Foreground="White" FontFamily="Georgia" Click="GradesButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
