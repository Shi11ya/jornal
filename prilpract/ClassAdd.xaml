<Page x:Class="prilpract.ClassAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prilpract"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClassAdd">

    <Grid Background="#FFECC5A0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="245" Width="184">
            <TextBlock Text="Номер класса" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding classid}" Margin="5"/>
            <TextBlock Text="Буква класса" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding classname}" Margin="5"/>
            <TextBlock Text="Классный руководитель" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding classteacherid}" Margin="5"/>
   
    
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="27" Background="#FFCEB07A" FontFamily="Georgia" Click="SaveBtn_Click" />
            <Button x:Name="BackBtn" Content="Назад" Margin="5" Width="150" Height="27" Background="#FFCEB07A" FontFamily="Georgia" Click="BackBtn_Click"  />
        </StackPanel>
        
    </Grid>
</Page>
