<Page x:Class="prilpract.UsrAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prilpract"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsrAdd">

    <Grid Background="CadetBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="247" Width="184">
            <TextBlock Text="Логин" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding gradeid}" Margin="5"/>
            <TextBlock Text="Пароль" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding studentid}" Margin="5"/>
            <TextBlock Text="Права" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding subjectid}" Margin="5"/>
            
           
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="27" Background="Lime" FontFamily="Georgia" Click="SaveBtn_Click" />
            <Button x:Name="BackBtn" Content="Назад" Margin="5" Width="150" Height="27" Background="PaleVioletRed" FontFamily="Georgia" Click="BackBtn_Click"  />
        </StackPanel>
        
    </Grid>
</Page>
