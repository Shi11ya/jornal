<Page x:Class="prilpract.StudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prilpract"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentsPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="400"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="StuDG" AutoGenerateColumns="False" IsReadOnly="True" Background="CadetBlue"  FontFamily="Georgia">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код ученика" Binding="{Binding studentid}" Width="*"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding studentFIO}" Width="*"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding birthdate}" Width="*"/>
                <DataGridTextColumn Header="Пол" Binding="{Binding gender}" Width="*"/>
                <DataGridTextColumn Header="Номер телефона" Binding="{Binding phone}" Width="*"/>
                <DataGridTextColumn Header="Код класса" Binding="{Binding classid}" Width="*"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="Change" Content="Изменить" Margin="5" Height="35" Width="70"  FontFamily="Georgia" />
                            
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Background="CadetBlue">
            <Button x:Name="AddBtn" Content="Добавить" Margin="10" Height="30" Width="106"  FontFamily="Georgia" Click="AddBtn_Click" BorderBrush="White" Background="Lime" />
            <Button x:Name="Delete" Content="Удалить" Margin="10" Height="30" Width="106"  FontFamily="Georgia" Click="Delete_Click" BorderBrush="White" Background="PaleVioletRed" />
            <Button x:Name ="UpdBtn"  Content="Обновить" Margin="10" Height="30" Width="106"  FontFamily="Georgia" Click="UpdBtn_Click" BorderBrush="White" Background="White" />
            <Button x:Name="Back" Content="Назад"  Margin="10" Height="30" Width="106"  FontFamily="Georgia" Click="Back_Click" BorderBrush="White" Background="Violet" />
            <Button Name="Otch" Content="Отчет" Margin="5" Height="35" Width="70"  FontFamily="Georgia" BorderBrush="White"  Background="HotPink" Click="GenerateReport_Click" />
            <Button x:Name="SearchButton" Content="Поиск" Margin="5" Height="30" Width="53" FontFamily="Georgia" Click="SearchButton_Click" BorderBrush="White" Background="White"/>
            <TextBox x:Name="SearchTextBox" MinWidth="200" Margin="5" Height="22" Width="177" FontFamily="Georgia"/>
        </StackPanel>
    </Grid>
</Page>
