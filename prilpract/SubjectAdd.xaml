<Page x:Class="prilpract.SubjectAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prilpract"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SubjectAdd" >

    <Grid Background="CadetBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="253" Width="184">
            <TextBlock Text="Код предмета" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding subjectid}" Margin="5"/>
            <TextBlock Text="Наименование предмета" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding subjectname}" Margin="5"/>
            <TextBlock Text="Количество часов в неделю" Margin="5" FontFamily="Georgia"/>
            <TextBox Text="{Binding hoursperweek}" Margin="5"/>

            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="27" Background="Lime" FontFamily="Georgia" Click="SaveBtn_Click" />
            <Button x:Name="BackBtn" Content="Назад" Margin="5" Width="150" Height="27" Background="Violet" FontFamily="Georgia" Click="BackBtn_Click"  />
        </StackPanel>
        
    </Grid>
</Page>
