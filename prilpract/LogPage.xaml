<Page x:Class="prilpract.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prilpract"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPage">

    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/Рисунок2.png"/>
        </Grid.Background>

        <Border Background="CadetBlue"  CornerRadius="10" Margin="179,73,179,49" BorderBrush="#FFCCCCCC" BorderThickness="1"
         
                Padding="20">
            <StackPanel>
                <TextBlock Text="Авторизация"  FontSize="36"  FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" FontFamily="Georgia"/>
                <TextBlock Text="Логин:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left"  FontFamily="Georgia" TextAlignment="Right" FontSize="20" FontWeight="Bold"/>
                <TextBox x:Name="LoginBox" Text="{Binding login}" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="20" FontWeight="Bold" Foreground="#0077c2" HorizontalAlignment="Stretch"/>
                <TextBlock Text="Пароль:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left"  FontFamily="Georgia" TextAlignment="Right" FontSize="20" FontWeight="Bold"/>
                <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Margin="5" FontSize="20" FontWeight="Bold"  HorizontalAlignment="Stretch"/>

                <TextBlock x:Name="ErrorText" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Неверный логин или пароль!" Foreground="Red" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10" Visibility="Collapsed"/>
                
                <Button x:Name="btnLogin"  Content="Войти"  Height="35" Margin="5,0,5,10"  Background="#FFF44242" Foreground="White" FontSize="14" FontWeight="Bold"
                        BorderThickness="0"
                        Click="BtnLogin_Click" FontFamily="Georgia"/>

            </StackPanel>
        </Border>

    </Grid>
</Page>
