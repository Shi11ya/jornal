<Page x:Class="prilpract.JourPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prilpract"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JourPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="JoDG" HorizontalAlignment="Stretch" AutoGenerateColumns="False" IsReadOnly="True" Background="CadetBlue" FontFamily="Georgia">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код" Binding="{Binding idlog}" Width="*"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding login}" Width="*"/>
                <DataGridTextColumn Header="Операция " Binding="{Binding operation}" Width="*"/>
                <DataGridTextColumn Header="Дата операции" Binding="{Binding dateop}" Width="*"/>
                <DataGridTextColumn Header="Код пользователя" Binding="{Binding userid}" Width="*"/>

                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="Change" Content="Изменить" Margin="5" Height="30" Width="70"  FontFamily="Georgia" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Margin="0,350,0,0" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Background="CadetBlue">
            <Button x:Name="AddBtn" Content="Добавить" Margin="10" Height="30" Width="106"  FontFamily="Georgia" Click="AddBtn_Click" BorderBrush="White" Background="Lime" />
            <Button x:Name="Delete" Content="Удалить" Margin="10" Height="30" Width="106"  FontFamily="Georgia" Click="Delete_Click" BorderBrush="White" Background="PaleVioletRed" />
            <Button x:Name="Back" Content="Назад"  Margin="10" Height="30" Width="106"  FontFamily="Georgia" Click="Back_Click" BorderBrush="White" Background="Violet" />


        </StackPanel>
    </Grid>
</Page>
